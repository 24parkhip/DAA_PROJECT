# -------------------------------------------------------
# Step 6: Path between two places
# -------------------------------------------------------

def find_path(G, start, end):
    try:
        return nx.shortest_path(G, source=start, target=end, weight='weight')
    except nx.NetworkXNoPath:
        return None

